

<% provide(:title, 'Sign up') %>


<div class="row">

    <div class="col-md-3">

    </div>


  <div class="col-md-6">

    <h1>Unite a nuestra comunidad!</h1>

    <%= form_for(@user) do |f| %>
      <%= f.label :name, 'Nombre'%>
      <%= f.text_field :name %>

      <%= f.label :email, 'Email'%>
      <%= f.email_field :email %>

      <%= f.label :birth_date, 'Fecha de nacimiento'%>
      <%= f.date_field :birth_date %>

      <%= f.label :numTarjeta, 'Número de tarjeta' %>
      <%= f.text_field :numTarjeta %>

      <%= f.label :codTarjeta, 'Código de tarjeta' %>
      <%= f.password_field :codTarjeta %>

      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Registrarse!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
