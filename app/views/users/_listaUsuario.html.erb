<div class="card rounded-0">
	
	<div class="card-header text-center">Lista de Usuarios</div>
	
	<div class="card-body">
		<div class="row">
			<div class="col-12">
				<div class="list-group rounded-0" id="list-tab" role="tablist">
					<% usuarios.each do |user| %>
						<a href="/users/<%=user.id%>" class="list-group-item list-group-item-action rounded-0">
							<div class="<%= (user.esPremium && !user.user_configs.esPremium) ? 'alert alert-success' : '' %> m-0 rounded-0"><%=user.name%></div>
						</a>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>
