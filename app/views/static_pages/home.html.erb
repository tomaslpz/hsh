<div class="row justify-content-md-center">
	<a href="/residences" class="btn btn-primary my-3 col-md-5">Lista de Residencias</a>
</div>

<div class="row justify-content-md-center">
	<div class="col-md-6" >
		<div class="card box-shadow">
			<img class="card-img-top" src="<%=@r.img_link%>" alt="Card image cap">
          	<div class="card-body">
            	<p class="card-text"><strong><%=@r.nombre%></strong></p>
            	<p class="card-text"><%=@r.desc%></p>
            	<div class="d-flex justify-content-between align-items-center">
                	<a href= "/residences/<%=@r.id%> type="button" class="btn btn-sm btn-outline-secondary"">Ver</a>
            	</div>
          	</div>
        </div>
    </div>
</div>
