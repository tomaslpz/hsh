<div class="row justify-content-md-center mb-3">
	<% if logged_in_admin? || logged_in_user? %>
	<a href="/residences" class="btn btn-primary col-md-6 rounded-0">Lista de Residencias</a>
	<% end %>
	<% if logged_in_admin? %>
		<a href="/users" class="btn btn-primary col-md-6 rounded-0">Lista de Usuarios</a>
	<% end %>
</div>

<div class="row justify-content-md-center">
	<div class="col-md-6">
		<a href="/residences/<%=@r.id%>" class="cardlink">
			<div class="card box-shadow rounded-0 p-0 m-0">
				<img class="card-img-top rounded-0" src="<%=@r.img_link%>" alt="Card image cap">
				<div class="card-body">
					<p class="card-text"><strong><%=@r.nombre%></strong></p>
					<p class="card-text"><%=@r.desc%></p>
				</div>
			</div>
		</a>
	</div>
	<% if @hotsale != nil %>
	<div class="col-md-6">
		<a href="/blocks/<%=@hotsale.id%>" class="cardlink">
			<div class="card box-shadow rounded-0 p-0 m-0">
				<div class="card-header"><span class="badge badge-success rounded-0">HOTSALE DISPONIBLE!</span><span class="badge badge-info rounded-0"><%= @hotsale.fecha%></span></div>
				<img class="card-img-top rounded-0" src="<%=@hotsale.residence.img_link%>" alt="Card image cap">
				<div class="card-body">
					<p class="card-text"><strong><%=@hotsale.residence.nombre%></strong></p>
					<p class="card-text"><%=@hotsale.residence.desc%></p>
				</div>
			</div>
		</a>
	</div>
	<% end %>
</div>
