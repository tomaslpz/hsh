
<% provide(:title , @admin.codigo) %>

<% if logged_in? %>
<div class='row text-center'>
  <div class="col-md-3">
  </div>
  <div class="col-md-6 card">
    <h3>Crear administrador</h3>

    <%= form_for(@admin) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :codigo%>
      <%= f.text_field :codigo, class: 'form-control' %>

      <%= f.submit "Crear un nuevo administrador", class:"btn btn-primary" %>

      <% end %>
    </div>
</div>
<% else %>
Acceso denegado :)
<% end %>
