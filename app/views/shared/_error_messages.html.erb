<% if @admin.errors.any? %>

  <div id='error_explanation'>
    <div class= 'alert alert-danger'>
      El formulario contiene <%= pluralize(@admin.errors.count, 'errores') %>
    </div>

    <ul>
      <% @admin.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
